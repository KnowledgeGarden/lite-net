<script>
  function doClick(e) {
    var code = (e.keyCode ? e.keyCode : e.which);
    if(code == 13) { //Enter keycode
      document.getElementById("nnForm").submit();
    }
    
  }
</script>

<h1>{{title}}</h1>

<div style="overflow-y: auto; height:300px;">
    <!-- New note space -->
    <form id="nnForm" method="POST" action="/postnote">
      <input name="details" placeholder="Type new note" type="text" onKeyPress="doClick(event)" >
    </form>
    {{#each noteList}}
      <p>
        {{date}}<br/>
        {{{text}}}
      </p><br/>
    {{/each}}

</div>



